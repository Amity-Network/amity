    "version": "0.2.0",
    "configurations": [

        {
            "name": "Stagenet Miner",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/bin/nervad",
            "args": [
                "--stagenet",
                "--data-dir", "${workspaceFolder}/build/debug/bin/stagenet/node4",
                "--no-igd",
                "--hide-my-port",
                "--p2p-bind-port", "58080",
                "--rpc-bind-port", "58081",
                "--zmq-rpc-bind-port", "58082",
                "--rpc-restricted-bind-port", "58083",
                "--add-exclusive-node", "127.0.0.1:28080",
                "--add-exclusive-node", "127.0.0.1:38080",
                "--add-exclusive-node", "127.0.0.1:48080",
                "--start-mining", "NV1tXu3czVbaBWYcKg28X4P2mHrJZMnS8R3TshtYgJVrfA9XLrKRKzVcjaPLgjNiwzH3DNTeywRTURDJUY59a5Lb2vWSG9s5q",
                "--mining-threads", "2",
                "--block-sync-size", "1"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
